@model MaintenanceRecord

@{
    ViewData["Title"] = "Delete Maintenance Record";
}

<div class="container">
    <h2 class="mb-4">Delete Maintenance Record</h2>

    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this maintenance record? This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Maintenance Record #@Model.Id</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">@Model.Vehicle?.RegistrationNumber</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Cost</dt>
                <dd class="col-sm-9">@Model.Cost.ToString("C")</dd>

                <dt class="col-sm-3">Maintenance Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-3">Next Maintenance Date</dt>
                <dd class="col-sm-9">@(Model.NextMaintenanceDate.HasValue ? Model.NextMaintenanceDate.Value.ToString("MMM dd, yyyy") : "N/A")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case MaintenanceStatus.Scheduled:
                            <span class="badge bg-info">Scheduled</span>
                            break;
                        case MaintenanceStatus.InProgress:
                            <span class="badge bg-warning text-dark">In Progress</span>
                            break;
                        case MaintenanceStatus.Completed:
                            <span class="badge bg-success">Completed</span>
                            break;
                        case MaintenanceStatus.Overdue:
                            <span class="badge bg-danger">Overdue</span>
                            break;
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" data-confirm="Are you sure you want to permanently delete this maintenance record?">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
