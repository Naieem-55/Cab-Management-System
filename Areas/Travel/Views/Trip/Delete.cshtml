@model Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<div class="container">
    <h2 class="mb-4">Delete Trip</h2>

    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this trip? This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Trip #@Model.Id</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Customer Name</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3">Customer Phone</dt>
                <dd class="col-sm-9">@Model.CustomerPhone</dd>

                <dt class="col-sm-3">Driver</dt>
                <dd class="col-sm-9">@Model.Driver?.Employee?.Name</dd>

                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">@Model.Vehicle?.RegistrationNumber</dd>

                <dt class="col-sm-3">Route</dt>
                <dd class="col-sm-9">@Model.Route?.Origin &rarr; @Model.Route?.Destination</dd>

                <dt class="col-sm-3">Trip Date</dt>
                <dd class="col-sm-9">@Model.TripDate.ToString("MMM dd, yyyy HH:mm")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case TripStatus.Pending:
                            <span class="badge bg-warning text-dark">Pending</span>
                            break;
                        case TripStatus.Confirmed:
                            <span class="badge bg-info">Confirmed</span>
                            break;
                        case TripStatus.InProgress:
                            <span class="badge bg-primary">In Progress</span>
                            break;
                        case TripStatus.Completed:
                            <span class="badge bg-success">Completed</span>
                            break;
                        case TripStatus.Cancelled:
                            <span class="badge bg-danger">Cancelled</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Cost</dt>
                <dd class="col-sm-9">@Model.Cost.ToString("C")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" data-confirm="Are you sure you want to permanently delete this trip?">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
