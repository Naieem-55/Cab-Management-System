@model Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container-fluid">
    <h1 class="mb-4">Vehicle Details</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Model.Make @Model.Model - @Model.RegistrationNumber</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Registration Number</dt>
                        <dd class="col-sm-8">@Model.RegistrationNumber</dd>

                        <dt class="col-sm-4">Make</dt>
                        <dd class="col-sm-8">@Model.Make</dd>

                        <dt class="col-sm-4">Model</dt>
                        <dd class="col-sm-8">@Model.Model</dd>

                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Color</dt>
                        <dd class="col-sm-8">@Model.Color</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity</dd>

                        <dt class="col-sm-4">Fuel Type</dt>
                        <dd class="col-sm-8">@Model.FuelType</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case VehicleStatus.Available:
                                    <span class="badge bg-success">@Model.Status</span>
                                    break;
                                case VehicleStatus.OnTrip:
                                    <span class="badge bg-warning">@Model.Status</span>
                                    break;
                                case VehicleStatus.InMaintenance:
                                    <span class="badge bg-info">@Model.Status</span>
                                    break;
                                case VehicleStatus.Retired:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">Mileage</dt>
                        <dd class="col-sm-8">@Model.Mileage.ToString("N0") km</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.MaintenanceRecords != null && Model.MaintenanceRecords.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Maintenance Records</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Description</th>
                                        <th>Cost</th>
                                        <th>Date</th>
                                        <th>Next Maintenance</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.MaintenanceRecords.OrderByDescending(m => m.Date))
                                    {
                                        <tr>
                                            <td>@record.Description</td>
                                            <td>@record.Cost.ToString("C")</td>
                                            <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                            <td>@(record.NextMaintenanceDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                            <td>
                                                @switch (record.Status)
                                                {
                                                    case MaintenanceStatus.Scheduled:
                                                        <span class="badge bg-info">Scheduled</span>
                                                        break;
                                                    case MaintenanceStatus.InProgress:
                                                        <span class="badge bg-warning">In Progress</span>
                                                        break;
                                                    case MaintenanceStatus.Completed:
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case MaintenanceStatus.Overdue:
                                                        <span class="badge bg-danger">Overdue</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
