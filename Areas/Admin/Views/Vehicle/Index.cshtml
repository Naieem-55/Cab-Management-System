@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Vehicles</h1>
        <div class="d-flex gap-2">
            <a asp-action="Export" class="btn btn-outline-success">
                <i class="bi bi-download me-1"></i> Export CSV
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Vehicle
            </a>
        </div>
    </div>

    <!-- Search & Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search by registration, make, or model..." value="@ViewBag.SearchTerm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            @foreach (var s in Enum.GetValues<VehicleStatus>())
                            {
                                <option value="@s" selected="@(ViewData["SelectedStatus"] is VehicleStatus vs && vs == s)">@s</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Fuel Type</label>
                        <select name="fuelType" class="form-select">
                            <option value="">All Fuel Types</option>
                            @foreach (var ft in Enum.GetValues<FuelType>())
                            {
                                <option value="@ft" selected="@(ViewData["SelectedFuelType"] is FuelType vft && vft == ft)">@ft</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-search me-1"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Vehicles Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Reg Number</th>
                            <th>Make</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Fuel Type</th>
                            <th>Status</th>
                            <th>Mileage</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var vehicle in Model)
                            {
                                <tr>
                                    <td>@vehicle.RegistrationNumber</td>
                                    <td>@vehicle.Make</td>
                                    <td>@vehicle.Model</td>
                                    <td>@vehicle.Year</td>
                                    <td>@vehicle.FuelType</td>
                                    <td>
                                        @switch (vehicle.Status)
                                        {
                                            case VehicleStatus.Available:
                                                <span class="badge bg-success">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.OnTrip:
                                                <span class="badge bg-warning">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.InMaintenance:
                                                <span class="badge bg-info">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.Retired:
                                                <span class="badge bg-secondary">@vehicle.Status</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@vehicle.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@vehicle.Mileage.ToString("N0") km</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No vehicles found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <partial name="_PaginationPartial" />
</div>
