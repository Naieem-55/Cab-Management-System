@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Vehicles</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add Vehicle
        </a>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["StatusMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by registration, make, or model..." value="@ViewBag.SearchTerm" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Vehicles Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Reg Number</th>
                            <th>Make</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Fuel Type</th>
                            <th>Status</th>
                            <th>Mileage</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var vehicle in Model)
                            {
                                <tr>
                                    <td>@vehicle.RegistrationNumber</td>
                                    <td>@vehicle.Make</td>
                                    <td>@vehicle.Model</td>
                                    <td>@vehicle.Year</td>
                                    <td>@vehicle.FuelType</td>
                                    <td>
                                        @switch (vehicle.Status)
                                        {
                                            case VehicleStatus.Available:
                                                <span class="badge bg-success">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.OnTrip:
                                                <span class="badge bg-warning">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.InMaintenance:
                                                <span class="badge bg-info">@vehicle.Status</span>
                                                break;
                                            case VehicleStatus.Retired:
                                                <span class="badge bg-secondary">@vehicle.Status</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@vehicle.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@vehicle.Mileage.ToString("N0") km</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No vehicles found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
