@model Customer

@{
    ViewData["Title"] = "Delete Customer";
    var tripCount = Model.Trips?.Count ?? 0;
}

<div class="container">
    <h2 class="mb-4">Delete Customer</h2>

    @if (tripCount > 0)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> This customer has <strong>@tripCount trip(s)</strong> associated.
            You must remove or reassign the trips before deleting this customer.
        </div>
    }

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Are you sure you want to delete this customer?</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@(Model.Address ?? "N/A")</dd>

                <dt class="col-sm-3">Total Trips</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@tripCount</span></dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" data-confirm="Are you sure you want to permanently delete this customer?">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
