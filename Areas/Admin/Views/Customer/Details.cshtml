@model Customer

@{
    ViewData["Title"] = "Customer Details";
    var totalSpend = Model.Trips?.Sum(t => t.Cost) ?? 0;
}

<div class="container">
    <h2 class="mb-4">Customer Details</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.Name</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Customer ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@(Model.Address ?? "N/A")</dd>

                <dt class="col-sm-3">Total Trips</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@(Model.Trips?.Count ?? 0)</span></dd>

                <dt class="col-sm-3">Total Spend</dt>
                <dd class="col-sm-9"><span class="fw-bold text-success">@totalSpend.ToString("C")</span></dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
            </dl>
        </div>
    </div>

    @if (Model.Trips != null && Model.Trips.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Trip History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Trip #</th>
                                <th>Route</th>
                                <th>Driver</th>
                                <th>Vehicle</th>
                                <th>Trip Date</th>
                                <th>Status</th>
                                <th>Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trip in Model.Trips.OrderByDescending(t => t.TripDate))
                            {
                                <tr>
                                    <td>@trip.Id</td>
                                    <td>@(trip.Route != null ? $"{trip.Route.Origin} - {trip.Route.Destination}" : "N/A")</td>
                                    <td>@(trip.Driver?.Employee?.Name ?? "N/A")</td>
                                    <td>@(trip.Vehicle?.RegistrationNumber ?? "N/A")</td>
                                    <td>@trip.TripDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (trip.Status)
                                        {
                                            case TripStatus.Confirmed:
                                                <span class="badge bg-success">@trip.Status</span>
                                                break;
                                            case TripStatus.InProgress:
                                                <span class="badge bg-warning">@trip.Status</span>
                                                break;
                                            case TripStatus.Completed:
                                                <span class="badge bg-info">@trip.Status</span>
                                                break;
                                            case TripStatus.Cancelled:
                                                <span class="badge bg-danger">@trip.Status</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@trip.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@trip.Cost.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
