@model HRDashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid">
    <h1 class="mb-4">HR Dashboard</h1>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-primary h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-people fs-1 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Total Employees</h6>
                        <h2 class="card-title mb-0">@Model.TotalEmployees</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-check fs-1 text-success"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Active Employees</h6>
                        <h2 class="card-title mb-0">@Model.ActiveEmployees</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-dash fs-1 text-warning"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Employees On Leave</h6>
                        <h2 class="card-title mb-0">@Model.EmployeesOnLeave</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-info h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-workspace fs-1 text-info"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Total Drivers</h6>
                        <h2 class="card-title mb-0">@Model.TotalDrivers</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-check-fill fs-1 text-success"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Available Drivers</h6>
                        <h2 class="card-title mb-0">@Model.AvailableDrivers</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- License Expiry Alerts -->
    @if (Model.ExpiringLicenses.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> License Expiry Alerts (@Model.ExpiringLicenseCount)</h5>
            <div class="table-responsive">
                <table class="table table-sm table-borderless mb-0">
                    <thead>
                        <tr>
                            <th>Driver Name</th>
                            <th>License #</th>
                            <th>Expiry Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var driver in Model.ExpiringLicenses)
                        {
                            <tr>
                                <td>@driver.Employee?.Name</td>
                                <td>@driver.LicenseNumber</td>
                                <td>@driver.LicenseExpiry.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (driver.LicenseExpiry < DateTime.Today)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Expiring Soon</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Employees by Position</h5></div>
                <div class="card-body"><canvas id="positionChart"></canvas></div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Driver Status Distribution</h5></div>
                <div class="card-body"><canvas id="driverStatusChart"></canvas></div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Employees</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Position</th>
                            <th>Status</th>
                            <th>Hire Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.RecentEmployees)
                        {
                            <tr>
                                <td><a asp-area="HR" asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="text-decoration-none">@employee.Name</a></td>
                                <td>@employee.Email</td>
                                <td>
                                    @switch (employee.Position)
                                    {
                                        case EmployeePosition.Driver:
                                            <span class="badge bg-primary">Driver</span>
                                            break;
                                        case EmployeePosition.Receptionist:
                                            <span class="badge bg-info">Receptionist</span>
                                            break;
                                        case EmployeePosition.Cleaner:
                                            <span class="badge bg-secondary">Cleaner</span>
                                            break;
                                        case EmployeePosition.Mechanic:
                                            <span class="badge bg-warning">Mechanic</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (employee.Status)
                                    {
                                        case EmployeeStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case EmployeeStatus.OnLeave:
                                            <span class="badge bg-warning">On Leave</span>
                                            break;
                                        case EmployeeStatus.Terminated:
                                            <span class="badge bg-danger">Terminated</span>
                                            break;
                                    }
                                </td>
                                <td>@employee.HireDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        new Chart(document.getElementById('positionChart'), {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.PositionLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.PositionCounts)),
                    backgroundColor: ['#007bff', '#17a2b8', '#6c757d', '#ffc107']
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });

        new Chart(document.getElementById('driverStatusChart'), {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DriverStatusLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.DriverStatusCounts)),
                    backgroundColor: ['#28a745', '#ffc107', '#6c757d', '#dc3545']
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });
    </script>
}
