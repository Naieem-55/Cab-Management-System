@model Driver

@{
    ViewData["Title"] = "Delete Driver";
}

<div class="container-fluid">
    <h1 class="mb-4">Delete Driver</h1>

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this driver?</h5>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Employee Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Employee.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Employee.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Employee.Phone</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Driver Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">License Number</dt>
                <dd class="col-sm-9">@Model.LicenseNumber</dd>

                <dt class="col-sm-3">License Expiry</dt>
                <dd class="col-sm-9">@Model.LicenseExpiry.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case DriverStatus.Available:
                            <span class="badge bg-success">Available</span>
                            break;
                        case DriverStatus.OnTrip:
                            <span class="badge bg-warning">On Trip</span>
                            break;
                        case DriverStatus.OffDuty:
                            <span class="badge bg-secondary">Off Duty</span>
                            break;
                        case DriverStatus.Suspended:
                            <span class="badge bg-danger">Suspended</span>
                            break;
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
