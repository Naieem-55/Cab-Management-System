@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <h1 class="mb-4">Delete Employee</h1>

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this employee?</h5>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.Name</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Position</dt>
                <dd class="col-sm-9">
                    @switch (Model.Position)
                    {
                        case EmployeePosition.Driver:
                            <span class="badge bg-primary">Driver</span>
                            break;
                        case EmployeePosition.Receptionist:
                            <span class="badge bg-info">Receptionist</span>
                            break;
                        case EmployeePosition.Cleaner:
                            <span class="badge bg-secondary">Cleaner</span>
                            break;
                        case EmployeePosition.Mechanic:
                            <span class="badge bg-warning">Mechanic</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case EmployeeStatus.Active:
                            <span class="badge bg-success">Active</span>
                            break;
                        case EmployeeStatus.OnLeave:
                            <span class="badge bg-warning">On Leave</span>
                            break;
                        case EmployeeStatus.Terminated:
                            <span class="badge bg-danger">Terminated</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Hire Date</dt>
                <dd class="col-sm-9">@Model.HireDate.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-3">Salary</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
