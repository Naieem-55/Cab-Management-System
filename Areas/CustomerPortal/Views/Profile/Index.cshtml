@model Customer

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="bi bi-person"></i> My Profile</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Profile Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                        <h3 class="mt-2">@Model.Name</h3>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Not provided")</dd>

                        <dt class="col-sm-4">Member Since</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                    </dl>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a asp-controller="Account" asp-action="ChangePassword" asp-area="" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
