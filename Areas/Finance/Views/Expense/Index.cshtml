@model IEnumerable<Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Expenses</h1>
        <div>
            <a asp-action="Export" class="btn btn-outline-success me-2">
                <i class="bi bi-download"></i> Export CSV
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add Expense
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var cat in Enum.GetValues<ExpenseCategory>())
                            {
                                <option value="@cat" selected="@(ViewData["SelectedCategory"]?.ToString() == cat.ToString())">@cat</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Vehicle</label>
                        <select name="vehicleId" class="form-select">
                            <option value="">All Vehicles</option>
                            @foreach (SelectListItem item in ViewBag.Vehicles)
                            {
                                <option value="@item.Value" selected="@(ViewData["SelectedVehicle"]?.ToString() == item.Value)">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control" value="@ViewData["StartDate"]" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">End Date</label>
                        <input type="date" name="endDate" class="form-control" value="@ViewData["EndDate"]" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-funnel"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Vehicle</th>
                            <th>Trip</th>
                            <th>Approved By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var expense in Model)
                            {
                                <tr>
                                    <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-secondary">@expense.Category</span></td>
                                    <td>@expense.Amount.ToString("C")</td>
                                    <td>@(expense.Vehicle?.RegistrationNumber ?? "N/A")</td>
                                    <td>@(expense.TripId != null ? $"#{expense.TripId}" : "N/A")</td>
                                    <td>@(expense.ApprovedBy ?? "N/A")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No expenses found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <partial name="_PaginationPartial" />
</div>
