@model Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container">
    <h2 class="mb-4">Delete Expense</h2>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Are you sure you want to delete this expense?</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">@(Model.Vehicle?.RegistrationNumber ?? "N/A")</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" data-confirm="Are you sure you want to permanently delete this expense?">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
