@model FinanceDashboardViewModel

@{
    ViewData["Title"] = "Finance Dashboard";
}

<div class="container-fluid">
    <h2 class="mb-4">Finance Dashboard</h2>

    <div class="row g-4 mb-4">
        <div class="col-md-4 col-lg">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar fs-1 text-primary"></i>
                    <h5 class="card-title mt-2">Total Revenue</h5>
                    <p class="card-text fs-4 fw-bold">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up fs-1 text-success"></i>
                    <h5 class="card-title mt-2">Monthly Revenue</h5>
                    <p class="card-text fs-4 fw-bold">@Model.MonthlyRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history fs-1 text-warning"></i>
                    <h5 class="card-title mt-2">Pending Payments</h5>
                    <p class="card-text fs-4 fw-bold">@Model.PendingPayments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h5 class="card-title mt-2">Completed Payments</h5>
                    <p class="card-text fs-4 fw-bold">@Model.CompletedPayments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg">
            <div class="card border-info h-100">
                <div class="card-body text-center">
                    <i class="bi bi-receipt fs-1 text-info"></i>
                    <h5 class="card-title mt-2">Total Billings</h5>
                    <p class="card-text fs-4 fw-bold">@Model.TotalBillings</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Payment Method Distribution</h5></div>
                <div class="card-body"><canvas id="paymentMethodChart"></canvas></div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Revenue Trend (Last 6 Months)</h5></div>
                <div class="card-body"><canvas id="revenueTrendChart"></canvas></div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Billings</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Trip ID</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentBillings.Any())
                        {
                            @foreach (var item in Model.RecentBillings)
                            {
                                <tr>
                                    <td><a asp-area="Finance" asp-controller="Billing" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">#@item.TripId</a></td>
                                    <td>@item.Amount.ToString("C")</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case PaymentStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case PaymentStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case PaymentStatus.Failed:
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            case PaymentStatus.Refunded:
                                                <span class="badge bg-secondary">Refunded</span>
                                                break;
                                        }
                                    </td>
                                    <td>@item.PaymentDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No recent billings found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        new Chart(document.getElementById('paymentMethodChart'), {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.PaymentMethodLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.PaymentMethodAmounts)),
                    backgroundColor: ['#28a745', '#007bff', '#ffc107', '#17a2b8', '#dc3545']
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });

        new Chart(document.getElementById('revenueTrendChart'), {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RevenueTrendLabels)),
                datasets: [{
                    label: 'Revenue',
                    data: @Html.Raw(Json.Serialize(Model.RevenueTrendData)),
                    borderColor: '#28a745',
                    backgroundColor: 'rgba(40, 167, 69, 0.1)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });
    </script>
}
