@model Billing

@{
    ViewData["Title"] = "Delete Billing";
}

<div class="container">
    <h2 class="mb-4">Delete Billing</h2>

    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this billing record? This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Billing #@Model.Id</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Billing ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Trip ID</dt>
                <dd class="col-sm-9">@Model.TripId</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3">Payment Date</dt>
                <dd class="col-sm-9">@Model.PaymentDate.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-3">Payment Method</dt>
                <dd class="col-sm-9">@Model.PaymentMethod</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case PaymentStatus.Pending:
                            <span class="badge bg-warning text-dark">Pending</span>
                            break;
                        case PaymentStatus.Completed:
                            <span class="badge bg-success">Completed</span>
                            break;
                        case PaymentStatus.Failed:
                            <span class="badge bg-danger">Failed</span>
                            break;
                        case PaymentStatus.Refunded:
                            <span class="badge bg-secondary">Refunded</span>
                            break;
                    }
                </dd>
            </dl>

            @if (Model.Trip != null)
            {
                <hr />
                <h5 class="mt-3">Associated Trip</h5>
                <dl class="row">
                    <dt class="col-sm-3">Customer Name</dt>
                    <dd class="col-sm-9">@Model.Trip.CustomerName</dd>

                    <dt class="col-sm-3">Trip Date</dt>
                    <dd class="col-sm-9">@Model.Trip.TripDate.ToString("MMM dd, yyyy")</dd>
                </dl>
            }
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
