@model IEnumerable<Billing>

@{
    ViewData["Title"] = "Financial Reports";
}

<div class="container-fluid">
    <h2 class="mb-4">Financial Reports</h2>

    <!-- Date Range Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel"></i> Filter</button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="bi bi-x-lg"></i> Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar fs-1 text-primary"></i>
                    <h5 class="card-title mt-2">Total Revenue</h5>
                    <p class="card-text fs-4 fw-bold">@(((decimal)ViewBag.TotalRevenue).ToString("C"))</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history fs-1 text-warning"></i>
                    <h5 class="card-title mt-2">Pending Amount</h5>
                    <p class="card-text fs-4 fw-bold">@(((decimal)ViewBag.PendingAmount).ToString("C"))</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h5 class="card-title mt-2">Completed Payments</h5>
                    <p class="card-text fs-4 fw-bold">@ViewBag.CompletedPayments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-circle fs-1 text-danger"></i>
                    <h5 class="card-title mt-2">Pending Payments</h5>
                    <p class="card-text fs-4 fw-bold">@ViewBag.PendingPayments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Profit/Loss Section -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-danger h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack fs-1 text-danger"></i>
                    <h5 class="card-title mt-2">Total Expenses</h5>
                    <p class="card-text fs-4 fw-bold">@(((decimal)ViewBag.TotalExpenses).ToString("C"))</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-@(((decimal)ViewBag.NetProfit) >= 0 ? "success" : "danger") h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up-arrow fs-1 text-@(((decimal)ViewBag.NetProfit) >= 0 ? "success" : "danger")"></i>
                    <h5 class="card-title mt-2">Net Profit/Loss</h5>
                    <p class="card-text fs-4 fw-bold text-@(((decimal)ViewBag.NetProfit) >= 0 ? "success" : "danger")">@(((decimal)ViewBag.NetProfit).ToString("C"))</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Payment Method Breakdown</h5></div>
                <div class="card-body">
                    @if (((List<string>)ViewBag.PaymentBreakdownMethods).Any())
                    {
                        <table class="table table-sm mb-3">
                            <thead>
                                <tr>
                                    <th>Method</th>
                                    <th>Count</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ((List<string>)ViewBag.PaymentBreakdownMethods).Count; i++)
                                {
                                    <tr>
                                        <td>@(((List<string>)ViewBag.PaymentBreakdownMethods)[i])</td>
                                        <td>@(((List<int>)ViewBag.PaymentBreakdownCounts)[i])</td>
                                        <td>@(((List<decimal>)ViewBag.PaymentBreakdownTotals)[i].ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">No completed payments in this period.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Revenue Trend (Last 6 Months)</h5></div>
                <div class="card-body"><canvas id="revenueTrendChart"></canvas></div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Billing Records</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Trip #</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model.OrderByDescending(b => b.PaymentDate))
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.TripId</td>
                                    <td>@item.Amount.ToString("C")</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case PaymentStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case PaymentStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case PaymentStatus.Failed:
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            case PaymentStatus.Refunded:
                                                <span class="badge bg-secondary">Refunded</span>
                                                break;
                                        }
                                    </td>
                                    <td>@item.PaymentDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No billing records found for this period.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        new Chart(document.getElementById('revenueTrendChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.MonthlyLabels)),
                datasets: [{
                    label: 'Revenue',
                    data: @Html.Raw(Json.Serialize(ViewBag.MonthlyRevenue)),
                    backgroundColor: '#0d6efd'
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });
    </script>
}
